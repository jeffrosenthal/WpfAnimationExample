<Window x:Class="WpfAnimationExample.SelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnimationExample"
        mc:Ignorable="d"
        Title="Selector Window" Height="450" Width="800" Background="LightCyan">
    <UniformGrid Rows="1" Margin="20" Height="250">
        <Button Name="EasingSelectionButton" Margin="25" Click="EasingSelectionButton_Click">
            <StackPanel>
                <Label FontSize="24">Easing Function</Label>
                <Label FontSize="24">Display Window</Label>
            </StackPanel>
        </Button>
        <Button Name="TestingSelectionButton" Margin="25" Click="TestingSelectionButton_Click">
            <Label FontSize="24">Testing Windows</Label>
        </Button>
    </UniformGrid>
</Window>
